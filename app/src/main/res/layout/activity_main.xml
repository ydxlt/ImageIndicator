<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <org.yzjt.library.indicator.ImagePagerIndicator
            android:id="@+id/image_indicator1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tab_select_color="#f00"
            app:tab_unselect_color="#000"
            app:tab_visiable_count="3"
            app:tab_indicator="#f00"
            app:indicator_height="3dp"
            app:image_radio_height="0.25"/>

    <org.yzjt.library.indicator.ImagePagerIndicator
            android:id="@+id/image_indicator2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tab_select_color="#f0f"
            app:tab_unselect_color="#000"
            app:tab_visiable_count="6"
            app:tab_indicator="#f0f"
            app:image_radio_height="0.25"/>

    <org.yzjt.library.indicator.ImagePagerIndicator
            android:id="@+id/image_indicator3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tab_select_color="#0ff"
            app:tab_unselect_color="#000"
            app:tab_visiable_count="3"
            app:tab_indicator="@color/tab_light_blue"
            app:indicator_height="3dp"
            app:indicator_width="20dp"
            app:image_radio_height="0.25"/>

    <org.yzjt.library.indicator.ImagePagerIndicator
            android:id="@+id/image_indicator4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tab_select_color="#1afa29"
            app:tab_unselect_color="#000"
            app:tab_visiable_count="3"
            app:tab_indicator="@drawable/ic_triangle"
            app:indicator_height="3dp"
            app:indicator_width="20dp"
            app:image_radio_height="0.25"/>

    <org.yzjt.library.indicator.ImagePagerIndicator
            android:id="@+id/image_indicator5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:tab_select_color="#FF6B5B"
            app:tab_unselect_color="#000"
            app:tab_visiable_count="3"
            app:tab_indicator="@drawable/ic_indicator"
            app:image_radio_height="0.4"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
</LinearLayout>